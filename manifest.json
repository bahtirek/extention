{
    "name": "Bug Report",
    "description": "Bug report",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js",
                "js/common/helper-utils.js",
                "js/ui/extention-move.js",
                "js/ui/extention-resize.js",
                "js/ui/settings.js",
                "js/ui/mousedown.js",
                "js/dom/select.js",
                "js/dom/jira-flow.js",
                "js/dom/hover-outline.js",
                "js/ui/get-report.js",
                "js/export/pdf.js",
                "js/export/screenshot.js",
                "js/3rdparty/pdfmake.min.js",
                "js/3rdparty/vfs_fonts.js"
            ],
            "css": ["styles/styles.css"]
        }
    ],
    "web_accessible_resources": [
        "extention.html",
        "assets/spinner.svg"
    ],
    "permissions": ["storage", "activeTab", "declarativeContent"],
    "commands": {
        "trigger_select": {
          "suggested_key": {
            "default": "Ctrl+Shift+S",
            "mac": "Command+Shift+S"
          },
          "description": "Hot Key for Selection"
        },
        "get_screenshot": {
          "suggested_key": {
            "default": "Ctrl+Shift+U",
            "mac": "Command+Shift+U"
          },
          "description": "Hot Key for Screenshot"
        }
    },
    "browser_action": {
        "default_icon": "assets/icon.png"
    }
  }