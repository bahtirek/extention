{
    "name": "Bug Report",
    "description": "Bug report",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js",
                "extention-move.js",
                "extention-resize.js",
                "helper-utils.js",
                "mousedown.js",
                "select.js"
            ],
            "css": ["styles.css"]
        }
    ],
    "web_accessible_resources": [
        "extention.html"
    ],
    "permissions": ["storage"],
    "browser_action": {
        "default_icon": "icon.png"
    }
  }