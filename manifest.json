{
    "name": "Bug Report",
    "description": "Bug report",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "service_worker": "js/background/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/background/content.js",
                "js/ui/extention-move.js",
                "js/ui/extention-resize.js",
                "js/common/helper-utils.js",
                "js/ui/mousedown.js",
                "js/dom/select.js",
                "js/dom/jira-flow.js",
                "js/dom/screenshot.js",
                "js/ui/get-report.js"
            ],
            "css": ["styles/styles.css"]
        }
    ],
    "web_accessible_resources": [
        "extention.html"
    ],
    "permissions": ["storage"],
    "browser_action": {
        "default_icon": "assets/icon.png"
    }
  }